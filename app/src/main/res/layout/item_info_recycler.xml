<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTextHintStartActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:minHeight="120dp"
        android:paddingTop="10dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ProgressBar
            android:id="@+id/progress_bar_liked_post"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:visibility="gone" />

        <LinearLayout
            android:id="@+id/post_liked_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/avatar_post_info_recycler_test_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/blog_avatar"
                    android:visibility="visible"
                    tools:srcCompat="@tools:sample/avatars[11]" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/blog_name_info_recycler_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingStart="4dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
                        android:visibility="visible"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/time_info_recycler_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingStart="4dp"
                        android:textAppearance="@android:style/TextAppearance.StatusBar.EventContent"
                        android:visibility="visible"
                        tools:ignore="RtlSymmetry" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/grid_root_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="4dp"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/grid_root_text_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_body_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="6dp"
                    android:paddingEnd="4dp"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:maxLines="15"
                    android:paddingStart="4dp"
                    android:paddingTop="10dp"
                    android:scrollbars="vertical"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/hint_text_body_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:paddingStart="4dp"
                    android:paddingTop="4dp"
                    android:text="нажмите на текст чтобы свернуть(развернуть)"
                    android:textColor="@color/colorTextTag"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:ignore="RtlSymmetry" />

                <LinearLayout
                    android:id="@+id/grid_root_tag_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tag_text_liked_post_info_fragm"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorTextTag"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:paddingLeft="6dp"
                android:paddingRight="6dp">

                <ImageView
                    android:layout_width="@dimen/icon_size_hint_like_count"
                    android:layout_height="@dimen/icon_size_hint_like_count"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="4dp"
                    android:alpha="0.3"
                    android:background="@drawable/ic_hint_like_post_count"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/likes_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_marginStart="28dp"
                    android:layout_marginBottom="2dp"
                    android:alpha="0.4"
                    tools:ignore="RtlHardcoded" />

                <ImageButton
                    android:id="@+id/button_like_info"
                    android:layout_width="@dimen/icon_size_image_like"
                    android:layout_height="@dimen/icon_size_image_like"
                    android:layout_gravity="bottom|right"
                    android:layout_marginEnd="15dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <ImageButton
                    android:id="@+id/reblog_button_info"
                    android:layout_width="@dimen/icon_size_reblog"
                    android:layout_height="@dimen/icon_size_reblog"
                    android:layout_gravity="bottom|right"
                    android:layout_marginEnd="50dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription,RtlHardcoded" />

            </FrameLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>